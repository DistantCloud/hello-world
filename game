<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title></title>
		<style type="text/css">
			#game{
				border: 5px solid darkgrey;
				width: 500px;
				margin: 0 auto;
			}
			#buttons{
				text-align: center;
			}
			input{
				font-size: 20px;
				background-color: white;
				border: 1px solid darkgray;
			}
		</style>
	</head>
	<body>
		<!--block(块元素): div
		inline(行内元素): span-->
		<div id="game">
			<img id="img" src="img/ziyuan/girl0.jpg"/>
		</div>
		<div id="buttons">
			<!--input[type=button]*4-->
			<input type="button" value="上一张" onclick="last()"/>
			<input type="button" value="下一张" onclick="next()"/>
			<input type="button" value="自动切换" id="auto"/>
			<input type="button" value="随机切换" id="random"/>
			<input type="button" value="就选它了" id="ok"/>
		</div>
		<script type="text/javascript">
		//获取元素
		var img = document.getElementById("img");
		//记录图片的位置
		var index =0 ;
			//事件的绑定
			function next(){
				index++;
				//临界值的判断
				if(index==9){
					index=0;
				}
				img.src="img/ziyuan/girl"+index+".jpg";
			}
			function last(){
				index--;
				if(index == -1){
					index = 8;
				}
				img.src="img/ziyuan/girl"+index+".jpg";
				
			}
			//通过id获取按钮
			var auto = document.getElementById("auto");
			//记录计时器
			var timer =null;
			
	         auto.onclick=function(){
	         	if(timer == null){
	         	//每隔多少秒执行next函数
	         	timer=setInterval(next, 100);
	         }
	        }
	var ok =document.getElementById("ok");
	ok.onclick=function() {
		//清除计时器
		clearInterval(timer);
		timer=null;
		//始终选择七号美女
		img.src="img/ziyuan/girl7.jpg";
	}
	//随机切换
	function change(){
		//生成随机数 [0,1) [0,9)
		index=Math.random()*9;
		//向下取整
		index=Math.floor(index);
		console.log(index);
		//修改图片
		img.src="img/ziyuan/girl"+index+".jpg";
	}
	var random=document.getElementById("random");
	random.onclick=function(){
		if(timer==null){
		timer=setInterval(change,100)
	}
	}
		</script>
	</body>
</html>
